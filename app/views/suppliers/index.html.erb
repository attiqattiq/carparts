<p id="notice"><%= notice %></p>

<h1>Listing Suppliers</h1>

<table border="1" cellspacing="0" cellpading="0" width="90%">
  <thead>
    <tr>
      <th>Supplier</th>
      <th>Supplier name</th>
      <th>Supply date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.supplier_id %></td>
        <td><%= supplier.supplier_name %></td>
        <td><%= supplier.supply_date %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

