<p id="notice"><%= notice %></p>

<h1>Listing Parts</h1>

<table border="1" cellspacing="0" cellpading="0" width="90%">
  <thead>
    <tr>
      <th>Part</th>
      <th>Part name</th>
      <th>Part price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.part_id %></td>
        <td><%= part.part_name %></td>
        <td><%= part.part_price %></td>
        <td><%= link_to 'Show', part %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

