<h1>Customers</h1>


<div>   
<table id="customers" border="1" cellspacing="0" cellpading="0" width="90%">
  <thead>
    <tr>
      <th>Customer_id</th>
      <th>Customer name</th>
      <th>Location</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.customer_id %></td>
        <td><%= customer.customer_name %></td>
        <td><%= customer.location %></td>
        <td><%= customer.contact %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure you want to delet this?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div> 

