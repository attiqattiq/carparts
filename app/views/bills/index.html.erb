<p id="notice"><%= notice %></p>

<h1>Listing Bills</h1>

<table border="1" cellspacing="0" cellpading="0" width="90%">
  <thead>
    <tr>
      <th>Bill</th>
      <th>Amount</th>
      <th>Bill date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.bill_id %></td>
        <td><%= bill.amount %></td>
        <td><%= bill.bill_date %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

