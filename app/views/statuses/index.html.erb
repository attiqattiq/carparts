<p id="notice"><%= notice %></p>

<h1>Listing Statuses</h1>

<table border="1" cellspacing="0" cellpading="0" width="90%">
  <thead>
    <tr>
      <th>Status</th>
      <th>State</th>
      <th>Remarks</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.status_id %></td>
        <td><%= status.state %></td>
        <td><%= status.remarks %></td>
        <td><%= status.project %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

